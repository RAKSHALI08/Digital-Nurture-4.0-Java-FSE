<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Event Promo Video</title>
    <style>
        #readyMsg {
            color: green;
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body onbeforeunload="return warnOnUnload()">
    <h1>You're Invited!</h1>

    <video width="400" controls oncanplay="showReadyMessage()">
        <source src="https://www.w3schools.com/html/mov_bbb.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <p id="readyMsg"></p>

    <form id="feedbackForm">
        <label for="name">Name:</label>
        <input type="text" id="name" placeholder="Enter your name">

        <label for="email">Email:</label>
        <input type="email" id="email" placeholder="Enter your email">

        <textarea id="comments" placeholder="Leave your comments..."></textarea>
    </form>

    <script>
        let formStarted = false;
        document.getElementById("feedbackForm").addEventListener("input", () => {
            formStarted = true;
        });

        function showReadyMessage() {
            document.getElementById("readyMsg").textContent = "Video ready to play!";
        }

        function warnOnUnload() {
            if (formStarted) {
                return "You have unsaved changes. Are you sure you want to leave?";
            }
        }
    </script>
</body>
</html>
