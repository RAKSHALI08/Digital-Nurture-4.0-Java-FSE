<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Find Nearby Events</title>
    <style>
        button {
            padding: 10px 15px;
            margin-top: 20px;
        }
        #location {
            margin-top: 15px;
            font-weight: bold;
        }
        a {
            display: block;
            margin-top: 8px;
        }
    </style>
</head>
<body>
    <h1>Find Events Near You</h1>
    <button onclick="findLocation()">Find Nearby Events</button>
    <p id="location"></p>
    <div id="mapLink"></div>

    <script>
        function findLocation() {
            const locationElement = document.getElementById("location");
            const mapLinkDiv = document.getElementById("mapLink");

            // Static sample coordinates for Bangalore, India
            const lat = 12.9716;
            const lon = 77.5946;

            locationElement.textContent = `Your location: Latitude ${lat}, Longitude ${lon}`;
            const mapUrl = `https://www.google.com/maps?q=${lat},${lon}`;
            mapLinkDiv.innerHTML = `<a href="${mapUrl}" target="_blank">View on Google Maps</a>`;
        }
    </script>
</body>
</html>
