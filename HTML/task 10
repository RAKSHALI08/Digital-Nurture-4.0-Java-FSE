    <style>
        /* Intentional mistake: misspelled 'background-color' */
        #box {
            backgroun-color: lightblue; /* <-- misspelled on purpose */
            width: 200px;
            height: 100px;
            margin: 20px;
            border: 2px solid black;
        }
    </style>
</head>
<body>
    <h1>Debugging with DevTools</h1>

    <div id="box">Box Area</div>
    <button onclick="updateBox()">Click Me</button>

    <script>
        function updateBox() {
            console.log("Button clicked");

            const box = document.getElementById("box");

            let color = "lightgreen";
            console.log("Changing box color to:", color);

            // Add a breakpoint here to inspect variables
            box.style.backgroundColor = color;

            let width = box.offsetWidth;
            let height = box.offsetHeight;
            console.log("Box dimensions:", width, height);
        }
    </script>
